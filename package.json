{
  "name": "timesheet-manager",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.6.5",
    "babel-jest": "^29.7.0",
    "bootstrap-icons": "^1.11.3",
    "http-proxy-middleware": "^2.0.6",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nock": "^13.5.1",
    "react": "^18.2.0",
    "react-bootstrap-icons": "^1.10.3",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1",
    "recharts": "^2.12.0"
  },
  "scripts": {
    "start": "concurrently --kill-others \"cd mocks && java -jar wiremock-standalone.jar --port 8080\" \"react-scripts start\"",
    "start-mockless": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "wdio": "wdio run ./wdio.conf.js"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!@shotgunjed)/"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/junit",
    "outputName": "junit.xml"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/register": "^7.23.7",
    "@badisi/wdio-harness": "^3.1.0",
    "@testing-library/webdriverio": "^3.2.1",
    "@wdio/allure-reporter": "^8.29.2",
    "@wdio/cli": "^8.32.1",
    "@wdio/junit-reporter": "^8.28.6",
    "@wdio/local-runner": "^8.32.1",
    "@wdio/mocha-framework": "^8.31.1",
    "@wdio/spec-reporter": "^8.31.1",
    "@wdio/visual-service": "^3.0.1",
    "chromedriver": "^121.0.1",
    "concurrently": "^8.2.2",
    "wdio-chromedriver-service": "^8.1.1",
    "wdio-wait-for": "^3.0.11"
  }
}
